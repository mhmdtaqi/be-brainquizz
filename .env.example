# Database Configuration
# Get these values from your Railway PostgreSQL service
DB_HOST=your_railway_postgres_host  # e.g., containers-us-west-xx.railway.app
DB_PORT=5432
DB_USER=your_railway_postgres_user  # usually 'postgres'
DB_PASSWORD=your_railway_postgres_password
DB_NAME=your_railway_postgres_dbname  # usually 'railway'
DB_SSLMODE=require
DB_TIMEZONE=Asia/Jakarta

# JWT Secret
JWT_SECRET=your_jwt_secret

# Server Port
PORT=8000

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Default: http://localhost:5173, https://brainquiz-psi.vercel.app, https://brainquizz1.vercel.app, https://brainquizez.vercel.app
ALLOWED_ORIGINS=